<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wyy.demoshiro.mapper.SysRolePermissionMapper">

    <insert id="insert">
        INSERT INTO sys_role_permission (role_id, permission_id)
        VALUES (#{roleId}, #{permissionId})
    </insert>

    <delete id="delete">
        DELETE FROM sys_role_permission WHERE role_id = #{roleId} AND permission_id = #{permissionId}
    </delete>

    <select id="findByRoleId" resultType="com.wyy.demoshiro.entity.SysRolePermission">
        SELECT * FROM sys_role_permission WHERE role_id = #{roleId}
    </select>

    <select id="findByPermissionId" resultType="com.wyy.demoshiro.entity.SysRolePermission">
        SELECT * FROM sys_role_permission WHERE permission_id = #{permissionId}
    </select>

</mapper>
